<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogCraft</title>

    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <script type="module" src="https://static.rocket.new/rocket-web.js?_cfg=https%3A%2F%2Fblogcraft9401back.builtwithrocket.new&_be=https%3A%2F%2Fapplication.rocket.new&_v=0.1.8"></script>
</head>
<body class="bg-surface min-h-screen">

    <!-- ✅ HEADER PARTIAL -->
    <partial name="_Header" />
    

    <!-- ✅ PAGE CONTENT -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @RenderBody()
    </main>

    <!-- ✅ OPTIONAL SCRIPTS -->
    @RenderSection("Scripts", required: false)
</body>
</html>
