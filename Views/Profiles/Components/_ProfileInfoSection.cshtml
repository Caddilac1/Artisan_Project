@* Optional model for binding user data later *@
@model dynamic

 <!-- Profile Management Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Profile Customization Section -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Avatar & Basic Info -->
                <div class="card p-6">
                    <h2 class="text-lg font-semibold text-text-primary mb-6">Profile Information</h2>
                    
                    <!-- Avatar Upload -->
                    <div class="flex flex-col sm:flex-row sm:items-start space-y-4 sm:space-y-0 sm:space-x-6 mb-6">
                        <div class="flex-shrink-0">
                            <div class="relative">
                                <img class="h-24 w-24 rounded-full object-cover border-4 border-white shadow-elevated" src="https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Profile Avatar" loading="lazy" onerror="this.src='https://images.unsplash.com/photo-1584824486509-112e4181ff6b?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'; this.onerror=null;" />
                                <button class="absolute bottom-0 right-0 w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center hover:bg-primary-700 transition-colors btn-scale">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-sm font-medium text-text-primary mb-2">Profile Photo</h3>
                            <p class="text-sm text-text-secondary mb-4">Upload a new avatar. Recommended size: 400x400px</p>
                            <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                                <button class="inline-flex items-center px-4 py-2 border border-secondary-300 text-text-secondary font-medium rounded-lg hover:bg-secondary-100 transition-colors btn-scale">
                                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                    </svg>
                                    Upload New
                                </button>
                                <button class="inline-flex items-center px-4 py-2 text-error font-medium rounded-lg hover:bg-error-50 transition-colors btn-scale">
                                    Remove
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Display Name -->
                    <div class="mb-6">
                        <label for="displayName" class="block text-sm font-medium text-text-primary mb-2">Display Name</label>
                        <input type="text" id="displayName" value="Sarah Johnson" class="input w-full px-4 py-3 text-text-primary placeholder-text-secondary" />
                        <p class="mt-1 text-sm text-text-secondary">This is how your name will appear to other users.</p>
                    </div>

                    <!-- Bio -->
                    <div class="mb-6">
                        <label for="bio" class="block text-sm font-medium text-text-primary mb-2">Bio</label>
                        <textarea id="bio" rows="4" class="input w-full px-4 py-3 text-text-primary placeholder-text-secondary resize-none" placeholder="Tell us about yourself...">Passionate web developer and blogger sharing insights about modern web technologies, design patterns, and development best practices. Always learning, always creating.</textarea>
                        <div class="flex justify-between items-center mt-2">
                            <p class="text-sm text-text-secondary">Brief description for your profile.</p>
                            <span class="text-sm text-text-secondary">156/500</span>
                        </div>
                    </div>

                    <!-- Social Media Links -->
                    <div>
                        <h3 class="text-sm font-medium text-text-primary mb-4">Social Media Links</h3>
                        <div class="space-y-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                                    </svg>
                                </div>
                                <input type="url" placeholder="https://twitter.com/username" value="https://twitter.com/sarahjohnson" class="input flex-1 px-4 py-3 text-text-primary placeholder-text-secondary" />
                            </div>
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <svg class="h-5 w-5 text-blue-700" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                    </svg>
                                </div>
                                <input type="url" placeholder="https://linkedin.com/in/username" class="input flex-1 px-4 py-3 text-text-primary placeholder-text-secondary" />
                            </div>
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <svg class="h-5 w-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                    </svg>
                                </div>
                                <input type="url" placeholder="https://github.com/username" value="https://github.com/sarahjohnson" class="input flex-1 px-4 py-3 text-text-primary placeholder-text-secondary" />
                            </div>
                        </div>
                    </div>
                </div>
